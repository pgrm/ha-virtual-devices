{
  "name": "Home Assistant Dev",
  "image": "ghcr.io/home-assistant/devcontainer:addons",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/ha-virtual-devices,type=bind",
  "workspaceFolder": "/workspaces/ha-virtual-devices",
  "forwardPorts": [
    8123
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "keesschollaart.vscode-home-assistant"
      ]
    }
  },
  "postCreateCommand": "mkdir -p /config/custom_components && ln -sf ${containerWorkspaceFolder}/custom_components/virtual_step_dimmer /config/custom_components/virtual_step_dimmer && make setup"
}
