{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "python"
      ],
      "groupName": "Python runtime",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "7 days",
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "matchPackageNames": [
        "!python"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "21 days",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "matchPackageNames": [
        "!python"
      ]
    }
  ]
}
